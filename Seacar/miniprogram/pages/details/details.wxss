.details {
  width: 100%;
  height: 100%;
  background: #f5f5f5;
}

.swiperB {
  width: 100%;
  height: 750rpx;
}

.swiper {
  width: 100%;
  height: 100%;
}

.swiper-image {
  width: 100%;
  height: 100%;
}


/* 描述 */
.miaosu{
  width: 100%;
  height: 80rpx;
  color: #000;
  text-indent: 20rpx;
  padding: 10rpx;
}

/* 商品详情 */

.details-box {
  width: 100%;
}

.price {
  width: 100%;
  height: 50rpx;
  margin-top: 10rpx;
  color: red;
  font-size: 36rpx;
  background: #fff;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.price .one text:first-child::before {
  color: red;
  content: '\00A5';
  font-size: 20rpx;
  margin-right: 6px;
}

.price .one text:last-child {
  color: #000;
  font-size: 20rpx;
  margin-left: 10rpx;
  text-decoration: line-through;
}

.price .two {
  color: #000;
  font-size: 20rpx;
}

/* 底部 */

.tobuy {
  width: 100%;
  /* height: 120rpx; */
  background: #ededed;
  display: flex;
  justify-content: space-around;
  padding: 10rpx;
  position: fixed;
  bottom: 0;
  left: 0;
}

.tobuy .goucar {
  width: 100rpx;
  display: flex;
  flex-wrap: wrap;
  text-align: center;
}

.tobuy .goucar .m {
  width: 100%;
  height: 70rpx;
}

.tobuy .goucar image {
  width: 70rpx;
  height: 70rpx;
}

.tobuy .goucar .n {
  width: 100%;
  font-size: 20rpx;
}

.tobybox {
  display: flex;
  align-items: center;
  flex: 1;
  font-size: 36rpx;
  color: white;
  padding: 10rpx;
  justify-content: space-around;
}

.tobybox-l {
  width: 50%;
  height: 100%;
  border-top-left-radius: 50rpx;
  border-bottom-left-radius: 50rpx;
  background-image: linear-gradient(#ff3030, #ff4500);
  display: flex;
  justify-content: center;
  align-items: center;
}

.tobybox-r {
  width: 50%;
  height: 100%;
  border-top-right-radius: 50rpx;
  border-bottom-right-radius: 50rpx;
  background-image: linear-gradient(#ff7256, #ff8c00);
  display: flex;
  justify-content: center;
  align-items: center;
}

.sizebox {
  width: 100%;
  height: 80rpx;
  background: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 10rpx;
}

.sizebox text {
  font-size: 30rpx;
  line-height: 60rpx;
}

