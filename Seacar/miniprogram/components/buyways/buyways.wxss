/* 火热 */

.hotlist {
  width: 100%;
  height: 300rpx;
  background: #000;
  padding-top: 4rpx;
  display: flex;
  justify-content: start;
}

.hotlist-l {
  width: 300rpx;
  height: 300rpx;
}

.hotlist image {
  width: 100%;
  height: 100%;
}

.hotlist-r {
  flex: 1;
  height: 100%;
  background: white;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.hotlist-r .desc text {
  overflow: hidden;
  text-overflow: ellipsis;
  text-indent: 20rpx;
  display: -webkit-box;
  color: #000;
  padding: 4rpx;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.hotlist-r .ensure text {
  color: #fff;
  background: red;
  font-size: 30rpx;
  border-radius: 10rpx;
  margin-left: 10rpx;
}

.price text {
  color: red;
  margin-left: 10rpx;
}

.price text:nth-child(2)::before {
  color: red;
  content: '\00A5';
  margin-right: 1px;
}

.price text:last-child {
  color: #000;
  font-size: 20rpx;
  margin-left: 10rpx;
  text-decoration: line-through;
}

.people {
  display: flex;
  margin-left: 10rpx;
  height: 65rpx;
}

.people .use text {
  color: #ba494b;
  line-height: 65rpx;
}

.people .head {
  flex: 1;
  height: 65rpx;
  position: relative;
  margin-left: 20rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.people .head image {
  position: absolute;
  width: 60rpx;
  height: 60rpx;
  border: 2rpx solid #fff;
  border-radius: 50%;
}

